{
  "version": 2,
  "name": "your-app-name",
  "public": true,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "cleanDist": true
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/",
      "continue": true
    }
  ],
  "env": {
    "VITE_API_URL": "https://fra.cloud.appwrite.io/v1"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}